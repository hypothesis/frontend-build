{
  "name": "@hypothesis/frontend-build",
  "version": "5.0.2",
  "description": "Hypothesis frontend build scripts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js"
    },
    "./css": {
      "import": "./lib/css.js"
    },
    "./manifest": {
      "import": "./lib/manifest.js"
    },
    "./rollup": {
      "import": "./lib/rollup.js"
    },
    "./run": {
      "import": "./lib/run.js"
    },
    "./sass": {
      "import": "./lib/css.js"
    },
    "./tests": {
      "import": "./lib/tests.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hypothesis/frontend-build.git"
  },
  "author": "Hypothesis developers",
  "license": "BSD-2-Clause",
  "files": [
    "index.js",
    "lib/*.js"
  ],
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@types/fancy-log": "^2.0.0",
    "@types/glob": "^9.0.0",
    "@types/node": "^24.0.2",
    "@types/sass": "^1.16.1",
    "eslint": "^9.23.0",
    "postcss": "^8.3.9",
    "prettier": "^3.0.0",
    "rollup": "^4.0.2",
    "sass": "^1.43.2",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.0.2",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "fancy-log": "^2.0.0",
    "glob": "^11.0.0"
  },
  "peerDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "postcss": "^8.3.9",
    "rollup": "^4.0.2",
    "sass": "^1.43.2",
    "tailwindcss": "^3.0.11 || ^4.1.0",
    "vitest": "^3.1.1"
  },
  "peerDependenciesMeta": {
    "@tailwindcss/postcss": {
      "optional": true
    },
    "postcss": {
      "optional": true
    },
    "sass": {
      "optional": true
    },
    "tailwindcss": {
      "optional": true
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true
  },
  "scripts": {
    "checkformatting": "prettier --check '**/*.js'",
    "format": "prettier --list-different --write '**/*.js'",
    "lint": "eslint .",
    "typecheck": "tsc"
  },
  "packageManager": "yarn@3.6.0"
}
