{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    /* Projects */

    /* Language and Environment */
    "target": "es2020",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "allowSyntheticDefaultImports": true,

    /* JavaScript Support */
    "allowJs": true,
    "checkJs": true,

    "noEmit": true,

    /* Interop Constraints */
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
